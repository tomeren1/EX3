<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c9ddff">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/dashedlineborders"
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearLayout1"
                android:background="@drawable/dashedlineborders">

                <TextView
                    android:id="@+id/textViewOperand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/operand1"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="35dp"/>

                <EditText
                    android:id="@+id/input1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="textPersonName|textCapWords"
                    android:background="@drawable/roundborders"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearLayout2"
                android:background="@drawable/dashedlineborders">

                <Button
                    android:id="@+id/button1"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button1"
                    android:background="@drawable/borders"/>
                <Button
                    android:id="@+id/button2"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button2"
                    android:background="@drawable/borders"/>
                <Button
                    android:id="@+id/button3"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button3"
                    android:background="@drawable/borders" />
                <Button
                    android:id="@+id/button4"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button4"
                    android:background="@drawable/borders"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linearLayout2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearLayout3"
                android:background="@drawable/dashedlineborders">

                <TextView
                    android:id="@+id/textViewOperand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/operand2"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="35dp"/>

                <EditText
                    android:id="@+id/input2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ems="10"
                    android:textStyle="bold"
                    android:inputType="textPersonName|textCapWords"
                    android:background="@drawable/roundborders"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#c9ddff">

            <TextView
                android:id="@+id/textViewAnswer"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/borders"
                android:gravity="center"
                android:text="@string/answer"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTheAnswer"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/roundborders"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonc"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/borders"
                android:text="Clean"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>